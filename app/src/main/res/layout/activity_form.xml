<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormActivity">

    <TextView
            android:id="@+id/cabecalho"
            android:layout_width="410dp"
            android:layout_height="60dp"
            android:layout_marginBottom="652dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Formulário de Cadastro de Pessoas com Deficiência"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.454" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="410dp"
            android:layout_height="0dp"
            android:layout_marginBottom="588dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Se você é uma pessoa com deficiência, cadastre-se através do formulário abaixo."
            android:textAlignment="textStart"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:id="@+id/textView" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/cabecalho"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Nome: "
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="556dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText android:id="@+id/nome"
              android:layout_width="200dp"
              android:layout_height="0dp"
              android:textSize="10sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="550dp"
              android:layout_marginStart="100dp" android:layout_marginTop="3dp"
              app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Data Nascimento: "
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="530dp"/>
    <EditText android:id="@+id/dataNascimento"
              android:layout_width="150dp"
              android:layout_height="0dp"
              android:textSize="10sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="522dp"
              android:layout_marginStart="100dp"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="57dp"
            android:text="E-mail:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="450dp"/>

    <EditText android:id="@+id/email"
              android:layout_width="200dp"
              android:layout_height="0dp"
              android:textSize="10sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="486dp"
              android:layout_marginStart="100dp"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Telefone de Contato:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="450dp"/>

    <EditText android:id="@+id/telefone"
              android:layout_width="200dp"
              android:layout_height="0dp"
              android:textSize="10sp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="444dp"
              android:layout_marginStart="100dp"/>
    <TextView
            android:id="@+id/textSexo"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Sexo:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="410dp"/>

    <RadioGroup
            android:id="@+id/sexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/telefone" app:layout_constraintStart_toEndOf="@+id/textSexo">
        <RadioButton
                android:id="@+id/rdb_masculino"
                android:layout_width="100dp"
                android:layout_height="14dp"
                android:text="Masculino"
                android:textSize="10sp"
                android:typeface="sans"
                app:layout_constraintEnd_toStartOf="@+id/feminino" android:layout_marginEnd="1dp"
                android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/telefone"/>
        <RadioButton
                android:id="@+id/rdb_feminino"
                android:layout_width="100dp"
                android:layout_height="12dp"
                android:text="Feminino"
                android:textSize="10sp"
                android:typeface="sans" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="110dp" android:layout_marginTop="21dp"
                app:layout_constraintTop_toBottomOf="@+id/telefone"/>
    </RadioGroup>

    <TextView
            android:id="@+id/textTipoDef"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Tipo de Deficiência:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="370dp"/>

    <CheckBox android:id="@+id/checkDefFisica"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:text="Fisica"
              app:layout_constraintStart_toEndOf="@+id/textTipoDef" android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/sexo"/>
    <CheckBox android:id="@+id/checkDefAuditiva"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:text="Auditiva"
              app:layout_constraintStart_toEndOf="@+id/textTipoDef" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/sexo" android:layout_marginStart="56dp"/>

    <CheckBox android:id="@+id/checkDefVisual"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:text="Visual"
              app:layout_constraintStart_toEndOf="@+id/textTipoDef" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/sexo" android:layout_marginStart="192dp"/>
    <CheckBox android:id="@+id/checkDefMental"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="10sp"
              android:text="Mental"
              app:layout_constraintStart_toEndOf="@+id/textTipoDef" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/sexo" android:layout_marginStart="124dp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Detalhes da Deficiência:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="320dp"/>
    <EditText android:id="@+id/detalhesDeficiencia"
              android:layout_width="100dp"
              android:layout_height="0dp"
              android:inputType="textMultiLine"
              android:lines="3"
              android:textSize="10sp"
              android:scrollHorizontally="false"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="270dp"
              android:layout_marginStart="100dp"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="CEP"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="220dp"/>
    <EditText android:id="@+id/cep"
              android:layout_width="100dp"
              android:layout_height="0dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:textSize="10sp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginBottom="210dp"
              android:layout_marginStart="100dp"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Endereço Completo:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="180dp"/>
    <EditText android:id="@+id/endereco"
              android:layout_width="200dp"
              android:layout_height="0dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:textSize="10sp"
              android:layout_marginBottom="175dp"
              android:layout_marginStart="100dp"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Cidade/UF:"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="150dp"/>
    <EditText android:id="@+id/cidadeUf"
              android:layout_width="200dp"
              android:layout_height="0dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:textSize="10sp"
              android:layout_marginBottom="140dp"
              android:layout_marginStart="100dp"/>

    <Button
            android:id="@+id/button"
            android:layout_width="339dp"
            android:layout_height="93dp"
            android:layout_marginBottom="24dp"
            android:onClick="btnSaveOnClick"
            android:text="Enviar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.461"
            app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>